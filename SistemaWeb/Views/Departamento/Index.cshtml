@model IEnumerable<Model.Entity.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center text-success">Listado de Departamento</h2>
<div class="well well-sm">
    <a class="btn btn-primary" title="Agregar Departamento" href="~/Departamento/Crear">  <span class="fa fa-user"></span> Nuevo Dept.</a>
    <a class="btn btn-danger" title="Ver Cliente" href="~/Cliente/Index">  <span class="fa fa-eye"></span></a>

</div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Codigo</th>
            <th>Nombre</th>




            <th colspan="3">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lista in Model)
        {
            <tr>
                <td>@lista.IdDepartamento</td>
                <td>@lista.NombreDepartamento</td>



                <td>
                    <a class="btn btn-danger" href="~/Departamento/Eliminar/@lista.IdDepartamento" title="Eliminar"><span class="fa fa-recycle"></span></a>
                    <a class="btn btn-warning" href="~/Departamento/AgruparporCliente/@lista.IdDepartamento" title="Cliente Por Departamento"><span class="fa fa-bookmark"></span></a>
                    <a class="btn btn-success" href="~/Departamento/Editar/@lista.IdDepartamento" title="Modficar"><span class="fa fa-edit"></span></a>


                </td>
            </tr>
        }
    </tbody>

</table>







