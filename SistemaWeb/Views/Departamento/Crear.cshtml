@model Model.Entity.Departamento

@{ ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<form action="@Url.Action("Crear", "Departamento")" method="post" id="frmCliente">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Crear Nuevo Empleado</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Nombres</label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="NombreDepartamento" placeholder="Ingrese nombres del Cliente" />
            </div>
        </div>
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear Cliente" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
